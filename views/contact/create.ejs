<%- 
styles = "<style>input::-webkit-outer-spin-button,input::-webkit-inner-spin-button {-webkit-appearance: none;margin: 0;}</style>";
%>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Create Contact</h2>

            <% if (typeof errors != 'undefined') { %>
            <div class="alert alert-danger" role="alert">
                Oops! Something wrong. Please check again.
                <ul>
                    <% errors.forEach(e => { %>
                    <li>
                        <%= e.msg %>
                    </li>
                    <% }) %>
                </ul>
            </div>
            <% } %>

            <form action="/contact" method="POST">
                <div class="form-floating mb-3">
                    <input type="text" name="name" class="form-control" id="flName"
                        value="<% if (typeof old != 'undefined') { %><%= old.name %><% } %>" placeholder="Name">
                    <label for="flName">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" name="phone" class="form-control" id="flPhone" placeholder="+62"
                        value="<% if (typeof old != 'undefined') { %><%= old.phone %><% } %>">
                    <label for="flPhone">Phone</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" name="email" class="form-control" id="floatingInput"
                        placeholder="name@example.com"
                        value="<% if (typeof old != 'undefined') { %><%= old.email %><% } %>">
                    <label for="floatingInput">Email address</label>
                </div>
                <button class="btn btn-primary" type="submit"> Create </button>
            </form>
        </div>
    </div>
</div>